rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Règle pour les todos : chaque utilisateur ne peut accéder qu'à ses propres todos
    match /todos/{userId} {
      // Permettre l'accès seulement si l'utilisateur est authentifié et correspond à l'userId
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Règles pour les sous-collections de todos
      match /todos/{todoId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Règle pour les métadonnées utilisateur (optionnel)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
